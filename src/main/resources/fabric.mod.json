{
  "schemaVersion": 1,
  "id": "multicount",
  "version": "${version}",

  "name": "Multicount",
  "description": "a server-side mod that allows players to create and switch between multiple saves",
  "authors": [
    "DialingSpoon"
  ],
  "contact": {
    "sources": "https://github.com/19Phin/Multiccount"
  },

  "license": "MIT",
  "icon": "assets/multicount/icon.png",

  "environment": "*",
  "entrypoints": {
    "server": [
      "net.dialingspoon.multicount.server.MulticountServer"
    ],
    "main": [
      "net.dialingspoon.multicount.Multicount"
    ],
    "client": [
      "net.dialingspoon.multicount.MulticountClient"
    ]
  },
  "mixins": [
    "multicount.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "minecraft": "1.20.3",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
